<div class="container ">
  <h1 class="display-4 text-center">New Game</h1>
  <div class="row justify-content-center"> <div class="col-md-8">
      <div class="letter-box d-flex justify-content-around align-items-center">
        <% @letters.each do |letter|%>
          <div class="letter-tile border border-2 rounded p-3 bg-secondary text-white">
            <span class="letter-text"><%= letter %></span>
          </div>
        <% end %>
      </div>

    <form class="p-3" action="score" method="POST" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <label for="player-input" class="form-label">What is the longest word you can find?</label>
      <div class="input-group mb-3">
        <input type="text" name="answer" class="form-control" placeholder="You word" aria-label="Your word" aria-describedby="button-addon2">
        <button class="btn btn-primary" type="button" id="button-addon2">Play!</button>
        <input id="token" name="letters" type="hidden" value=<%=@letters.join('')%>>
      </div>
    </form>

    </div>
  </div>
</div>
